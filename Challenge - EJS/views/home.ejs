<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p>
        <%= homeStartingContent %>
    </p>

    <% posts.forEach(function(post) { %>
        <h1>
            <%= post.title %>
        </h1>
        <p>
            <% if (post.body.length> 100) { %>
                <%= post.body.substring(0, 100) %> ... <a href="posts/<%=post.link%>">Read More</a>
                    <% } else { %>
                        <%= post.body %>
                            <% } %>
        </p>
        <% }) %>

            <%- include("partials/footer"); -%>